{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "flash binary",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["build binary"],
      "command": [
        "st-flash write ./BUILD/${workspaceFolderBasename}.bin 0x8000000"
      ]
    },
    {
      "type": "shell",
      "label": "build binary",
      "group": "build",
      "command": ["make"]
    }
  ]
}
